<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="strokeColor" format="color"/>

    <declare-styleable name="StopwatchView">
        <attr name="time" format="integer"/>
        <attr name="strokeColor"/>
        <attr name="android:fillColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleTextView">
        <attr name="color" format="color"/>
    </declare-styleable>

    <declare-styleable name="GraphView">
        <attr name="graphStrokeColor" format="color"/>
        <attr name="graphStrokeWidth" format="dimension"/>
        <attr name="dotColor" format="color"/>
        <attr name="dotSize" format="dimension"/>
        <attr name="graphFillColor" format="color"/>
        <attr name="graphGradientColor" format="color"/>
        <attr name="gradient" format="boolean"/>
    </declare-styleable>
</resources>